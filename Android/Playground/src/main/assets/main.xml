<View id="root" frame="0, 0, Sys.contW, Sys.contH">
    <View id="topContainer" frame="0, 0, Sys.contW, Sys.contH*0.9">
        <CollectionView id="widgetTableView" frame="0, 0, Sys.contW, Sys.contH*0.9" miniSpacing="1" backgroundColor="0xeeeeee"></CollectionView>
        <CollectionView id="sampleTableView" frame="0, 0, Sys.contW, Sys.contH*0.9" miniSpacing="1" backgroundColor="0xeeeeee" hide="true"></CollectionView>
        <View id="aboutView" frame="0, 0, Sys.contW, Sys.contH*0.9" flexCss="{flex-direction='column'}" backgroundColor="0xffffff" hide="true">
            <View flexCss="{flex=1, justify-content='center', align-items='center', margin-left=10*Sys.scale, margin-right=10*Sys.scale}">
                <Image flexCss="{height=Sys.contW/4, width=Sys.contW/4}" image="luaview.png"></Image>
            </View>
            <Label id="info" flexCss="{flex=1, margin-left=10*Sys.scale, margin-right=10*Sys.scale}" fontSize="16" lineCount="4" text="LuaView是一套跨平台的移动开发方案。我们致力于让开发者只写一份业务代码就可以在Android和iOS两个移动平台运行, 同时带来与Native开发相当的流畅度。"></Label>
            <View flexCss="{flex-direction='column', flex=1}">
                <View flexCss="{height=10*Sys.scale}" backgroundColor="0xeeeeee"></View>
                <View flexCss="{flex=1, flex-direction='row', margin-left=10*Sys.scale, margin-right=10*Sys.scale}">
                    <Label flexCss="{flex=1}" textAlign="TextAlign.LEFT" text="QQ群" fontSize="14"></Label>
                    <Label flexCss="{flex=1}" textAlign="TextAlign.RIGHT" text="539262083" fontSize="14"></Label>
                </View>
                <View flexCss="{height=1, margin-left=10*Sys.scale, margin-right=10*Sys.scale, margin-left=10*Sys.scale, margin-right=10*Sys.scale}" backgroundColor="0xeeeeee"></View>
                <View flexCss="{flex=1, flex-direction='row', margin-left=10*Sys.scale, margin-right=10*Sys.scale}">
                    <Label flexCss="{flex=1}" textAlign="TextAlign.LEFT" text="官网" fontSize="14"></Label>
                    <Label flexCss="{flex=3}" textAlign="TextAlign.RIGHT" text="https://alibaba.github.io/LuaViewSDK" fontSize="14"></Label>
                </View>
            </View>
            <Label flexCss="{flex=1}" text="当前版本: 0.1.0" textAlign="TextAlign.CENTER" backgroundColor="0xeeeeee" fontSize="14"></Label>
        </View>
    </View>
    <View id="line" frame="0, Sys.contH*0.9, Sys.contW, 1" backgroundColor="0x000000" alpha="0.3"></View>
    <View id="bottomContainer" frame="0, Sys.contH*0.9+1, Sys.contW, Sys.contH*0.1-1" flexCss="{flex-direction='row'}">
        <Label id="widgetTab" flexCss="{flex=1}" text="Widget" textAlign="TextAlign.CENTER" textColor="0xEB3131" fontSize="14"></Label>
        <Label id="sampleTab" flexCss="{flex=1}" text="Sample" textAlign="TextAlign.CENTER" fontSize="14"></Label>
        <Label id="aboutTab" flexCss="{flex=1}" text="About" textAlign="TextAlign.CENTER" fontSize="14"></Label>
    </View>
</View>