<View id="root" frame="0, 0, CONTENT_WIDTH, CONTENT_HEIGHT">
    <View id="topContainer" frame="0, 0, CONTENT_WIDTH, CONTENT_HEIGHT*0.9">
        <CollectionView id="widgetTableView" frame="0, 0, CONTENT_WIDTH, CONTENT_HEIGHT*0.9" miniSpacing="1" backgroundColor="0xeeeeee"></CollectionView>
        <CollectionView id="sampleTableView" frame="0, 0, CONTENT_WIDTH, CONTENT_HEIGHT*0.9" miniSpacing="1" backgroundColor="0xeeeeee" hide="true"></CollectionView>
        <View id="aboutView" frame="0, 0, CONTENT_WIDTH, CONTENT_HEIGHT*0.9" flexCss="flex-direction: column" backgroundColor="0xffffff" hide="true">
            <View flexCss="flex: 1, justify-content: center, align-items: center, margin-left: 10, margin-right: 10">
                <Image flexCss="height: 100, width: 100" image="luaview.png"></Image>
            </View>
            <Label id="info" flexCss="flex: 1, margin-left: 10, margin-right: 10" fontSize="16" textColor="0x000000" lineCount="4" text="LuaView是一套跨平台的移动开发方案。我们致力于让开发者只写一份业务代码就可以在Android和iOS两个移动平台运行, 同时带来与Native开发相当的流畅度。"></Label>
            <View flexCss="flex-direction: column, flex: 1">
                <View flexCss="height: 10" backgroundColor="0xeeeeee"></View>
                <View flexCss="flex: 1, flex-direction: row, margin-left: 10, margin-right: 10">
                    <Label flexCss="flex: 1" textAlign="TextAlign.LEFT" text="QQ群"></Label>
                    <Label flexCss="flex: 1" textAlign="TextAlign.RIGHT" text="539262083"></Label>
                </View>
                <View flexCss="height:1, margin-left: 10, margin-right: 10, margin-left: 10, margin-right: 10" backgroundColor="0xeeeeee"></View>
                <View flexCss="flex: 1, flex-direction: row, margin-left: 10, margin-right: 10">
                    <Label flexCss="flex: 1" textAlign="TextAlign.LEFT" text="官网"></Label>
                    <Label flexCss="flex: 3" textAlign="TextAlign.RIGHT" text="https://alibaba.github.io/LuaViewSDK"></Label>
                </View>
            </View>
            <Label flexCss="flex: 1" text="当前版本: 0.1.0" textAlign="TextAlign.CENTER" backgroundColor="0xeeeeee"></Label>
        </View>
    </View>
    <View id="line" frame="0, CONTENT_HEIGHT*0.9, CONTENT_WIDTH, 1" backgroundColor="0x000000" alpha="0.3"></View>
    <View id="bottomContainer" frame="0, CONTENT_HEIGHT*0.9+1, CONTENT_WIDTH, CONTENT_HEIGHT*0.1-1" flexCss="flex-direction: row">
        <Label id="widgetTab" flexCss="flex: 1" text="Widget" textAlign="TextAlign.CENTER" textColor="0xEB3131"></Label>
        <Label id="sampleTab" flexCss="flex: 1" text="Sample" textAlign="TextAlign.CENTER" textColor="0x000000"></Label>
        <Label id="aboutTab" flexCss="flex: 1" text="About" textAlign="TextAlign.CENTER" textColor="0x000000"></Label>
    </View>
</View>