<div id="root" frame="0, 0, sys.contW, sys.contH" bg="0xffffff" >
    <div id="container" frame="0, 0, sys.contW, sys.contH" css="{flex-direction='column', flex=1}">
        <div id="topContainer" css="{flex-direction='row', height=sys.contH*0.12}">
            <div id="inputContainer" css="{flex-direction='column', flex=5, margin=10}">
                <field id="input" css="{flex=1}" hint="Input Keyword.." text="LuaView"></field>
            </div>
            <btn id="go" css="{flex=2, margin=10}" bg="0xffffff" borderWidth="1" title="Search" borderColor="0x000000" corner="10"></btn>
        </div>
        <list id="tableView" css="{flex=8}" bg="0xeeeeee"></list>
    </div>
    <load id="loading" frame="0, sys.contH/2 - sys.contW/8, sys.contW, sys.contW/8" color="0xF06292"></load>
</div>