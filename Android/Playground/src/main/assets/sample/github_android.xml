<View id="root" frame="0, 0, Sys.contW, Sys.contH" backgroundColor="0xffffff" >
    <View id="container" frame="0, 0, Sys.contW, Sys.contH" flexCss="{flex-direction='column', flex=1}">
        <View id="topContainer" flexCss="{flex-direction='row', height=Sys.contH*0.12}">
            <View id="inputContainer" flexCss="{flex-direction='column', flex=5, margin=10*Sys.scale}">
                <TextField id="input" flexCss="{flex=1}" hint="Input Keyword.." text="LuaView"></TextField>
            </View>
            <Button id="go" flexCss="{flex=2, margin=10*Sys.scale}" backgroundColor="0xffffff" borderWidth="1" title="Search" borderColor="0x000000" cornerRadius="10"></Button>
        </View>
        <CollectionView id="tableView" flexCss="{flex=8}" backgroundColor="0xeeeeee"></CollectionView>
    </View>
    <LoadingIndicator id="loading" frame="0, Sys.contH/2 - Sys.contW/8, Sys.contW, Sys.contW/8" color="0xF06292"></LoadingIndicator>
</View>