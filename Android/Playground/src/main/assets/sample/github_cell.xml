<v id="root" frame="10, 5, sys.contW-20, sys.contH/3-10" css="{flex-direction='column'}" bg="0xffffff" >
    <l id="name" css="{flex=1, margin-top=10, margin-left=10, margin-right=10}" fontSize="16" textColor="0x000000"></l>
    <l id="description" css="{flex=3, margin-top=10, margin-left=10, margin-right=10}" fontSize="14" lineCount="3"></l>
    <v id="bottomContainer" css="{flex-direction='row', flex=2, margin=10}">
        <v id="bottomLeft" css="{flex=1, flex-direction='row'}">
            <l id="author" css="{flex=1}" text="Author: " fontSize="16" textAlign="TextAlign.LEFT"></l>
            <img id="profile" css="{flex=1}"></img>
        </v>
        <l id="stars" css="{flex=1}" textAlign="TextAlign.RIGHT" text="Stars: " fontSize="16"></l>
    </v>
</v>