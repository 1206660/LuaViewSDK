<View id="root" frame="10*Sys.scale, 5*Sys.scale, Sys.contW-20*Sys.scale, Sys.contH/3-10*Sys.scale" flexCss="{flex-direction='column'}" backgroundColor="0xffffff" >
    <Label id="name" flexCss="{flex=1, margin-top=10*Sys.scale, margin-left=10*Sys.scale, margin-right=10*Sys.scale}" fontSize="16" textColor="0x000000"></Label>
    <Label id="description" flexCss="{flex=3, margin-top=10*Sys.scale, margin-left=10*Sys.scale, margin-right=10*Sys.scale}" fontSize="14" lineCount="3"></Label>
    <View id="bottomContainer" flexCss="{flex-direction='row', flex=2, margin=10*Sys.scale}">
        <View id="bottomLeft" flexCss="{flex=1, flex-direction='row'}">
            <Label id="author" flexCss="{flex=1}" text="Author: " fontSize="16" textAlign="TextAlign.LEFT"></Label>
            <Image id="profile" flexCss="{flex=1}"></Image>
        </View>
        <Label id="stars" flexCss="{flex=1}" textAlign="TextAlign.RIGHT" text="Stars: " fontSize="16"></Label>
    </View>
</View>