<View id="root" frame="20, 10, CONTENT_WIDTH-40, CONTENT_HEIGHT/3-20" flexCss="flex-direction: row" backgroundColor="0xffffff" >
    <View id="left.pannel" flexCss="flex-direction: column, flex: 2">
        <Image id="profile" flexCss="flex: 1, margin: 15"></Image>
    </View>
    <View id="right.pannel" flexCss="flex-direction: column, flex: 3">
        <Label id="movieName" flexCss="flex: 1, margin-top: 15" fontSize="18" textColor="0x000000"></Label>
        <Label id="score" flexCss="height: 20" textColor="0xe61414"></Label>
        <Label id="character" flexCss="flex: 1" lineCount="3" textColor="0x666666"></Label>
        <Label id="number" flexCss="flex: 1" textColor="0xe61414"></Label>
    </View>
</View>