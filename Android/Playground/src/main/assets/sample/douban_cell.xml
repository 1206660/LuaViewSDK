<View id="root" frame="10*Sys.scale, 5*Sys.scale, Sys.contW-20*Sys.scale, Sys.contH/3-10*Sys.scale" flexCss="{flex-direction='row'}" backgroundColor="0xffffff" >
    <View id="left.pannel" flexCss="{flex-direction='column', flex=2}">
        <Image id="profile" flexCss="{flex=1, margin=15*Sys.scale}"></Image>
    </View>
    <View id="right.pannel" flexCss="{flex-direction='column', flex=3}">
        <Label id="movieName" flexCss="{flex=1, margin-top=15*Sys.scale}" fontSize="18" textColor="0x000000"></Label>
        <Label id="score" flexCss="{height=20*Sys.scale}" textColor="0xe61414" fontSize="14"></Label>
        <Label id="character" flexCss="{flex=2}" lineCount="3" textColor="0x666666" fontSize="16"></Label>
        <Label id="number" flexCss="{flex=1, margin-bottom=10*Sys.scale}" textColor="0xe61414" fontSize="14"></Label>
    </View>
</View>