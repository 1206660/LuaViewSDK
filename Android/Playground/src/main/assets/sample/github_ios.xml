<v id="root" frame="0, 0, Sys.contW, Sys.contH" bg="0xffffff" >
    <v id="container" frame="0, 0, Sys.contW, Sys.contH" css="{flex-direction='column', flex=1}">
        <v id="topContainer" css="{flex-direction='row', height=Sys.contH*0.12}">
            <v id="inputContainer" css="{flex-direction='row', flex=5, margin=10, align-items='center'}" borderWidth="1" borderColor="0x000000">
                <field id="input" css="{flex=1, margin-left=5, margin-right=5}" hint="Input Keyword.." text="LuaView"></field>
            </v>
            <btn id="go" css="{flex=2, margin=10}" bg="0xffffff" borderWidth="1" title="Search" borderColor="0x000000" corner="10"></btn>
        </v>
        <list id="tableView" css="{flex=8}" bg="0xeeeeee"></list>
    </v>
    <load id="loading" frame="0, Sys.contH/2 - Sys.contW/8, Sys.contW, Sys.contW/8" color="0xF06292"></load>
</v>