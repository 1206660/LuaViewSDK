<View id="root" frame="0, 0, CONTENT_WIDTH, CONTENT_HEIGHT" flexCss="flex-direction: column" >
    <View flexCss="height: 50" backgroundColor="0x004B97">
        <Label id="headerText" flexCss="flex: 1, margin: 10" text="Manual Play" fontSize="20" textColor="0xffffff"></Label>
    </View>
    <View id="container1" flexCss="flex: 1">
        <PagerView id="pagerView1" flexCss="flex: 1" looping="true"></PagerView>
        <PagerIndicator id="indicator1" flexCss="position: absolute, left: 5, top: 10, width: 100, height: 20" selectedColor="0x666666" unselectedColor="0xeeeeee"></PagerIndicator>
    </View>
    <View flexCss="height: 50" backgroundColor="0x004B97">
        <Label id="headerText" flexCss="flex: 1, margin: 10" text="Auto Play" fontSize="20" textColor="0xffffff"></Label>
    </View>
    <View id="container2" flexCss="flex: 1">
        <PagerView id="pagerView2" flexCss="flex: 1" autoScroll="2" looping="true"></PagerView>
        <PagerIndicator id="indicator2" flexCss="height: 20"  selectedColor="0x666666" unselectedColor="0xeeeeee"></PagerIndicator>
    </View>
</View>

