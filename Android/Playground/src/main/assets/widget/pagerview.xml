<div id="root" frame="0, 0, sys.contW, sys.contH" css="{flex-direction='column'}" >
    <div css="{height=sys.contH/10}" bg="0x004B97">
        <l id="headerText" css="{flex=1, margin=10}" text="Manual Play" fontSize="20" textColor="0xffffff"></l>
    </div>
    <div id="container1" css="{flex=1}">
        <page id="pagerView1" css="{flex=1}" looping="true"></page>
        <ind id="indicator1" css="{position='absolute', left=5, top=10, width=sys.contW/4, height=20}" selected="0x666666" unselected="0xeeeeee"></ind>
    </div>
    <div css="{height=sys.contH/10}" bg="0x004B97">
        <l id="headerText" css="{flex=1, margin=10}" text="Auto Play" fontSize="20" textColor="0xffffff"></l>
    </div>
    <div id="container2" css="{flex=1}">
        <page id="pagerView2" css="{flex=1}" autoScroll="2" looping="true"></page>
        <ind id="indicator2" css="{height=20}"  selected="0x666666" unselected="0xeeeeee"></ind>
    </div>
</div>

