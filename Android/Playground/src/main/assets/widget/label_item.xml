<View id="root" frame="0, 0, Sys.contW, Sys.contH*2.5" flexCss="{flex-direction='column'}" >
    <View flexCss="{height=Sys.contH/10}" backgroundColor="0x004B97">
        <Label flexCss="{flex=1, margin=10*Sys.scale}" text="Color" fontSize="20" textColor="0xffffff"></Label>
    </View>
    <View flexCss="{flex-direction='column', flex=1, margin-top=5*Sys.scale, margin-bottom=5*Sys.scale, margin-left=15*Sys.scale, margin-right=15*Sys.scale}">
        <Label flexCss="{flex=1}" text="default" fontSize="20"></Label>
        <Label flexCss="{flex=1}" text="0x6C8154" fontSize="20" textColor="0x6C8154"></Label>
        <Label flexCss="{flex=1}" text="0xFF0090" fontSize="20" textColor="0xFF0090"></Label>
        <Label flexCss="{flex=1}" text="0x33FF0090" fontSize="20" textColor="0x33FF0090"></Label>
    </View>
    <View flexCss="{height=Sys.contH/10}" backgroundColor="0x004B97">
        <Label flexCss="{flex=1, margin=10*Sys.scale}" text="FontSize" fontSize="20" textColor="0xffffff"></Label>
    </View>
    <View flexCss="{flex-direction='row', flex=1, margin-top=5*Sys.scale, margin-bottom=5*Sys.scale, margin-left=15*Sys.scale, margin-right=15*Sys.scale}">
        <Label flexCss="{flex=1}" text="15" fontSize="15"></Label>
        <Label flexCss="{flex=1}" text="30" fontSize="30"></Label>
        <Label flexCss="{flex=1}" text="60" fontSize="60"></Label>
    </View>
    <View flexCss="{height=Sys.contH/10}" backgroundColor="0x004B97">
        <Label flexCss="{flex=1, margin=10}" text="LineCount" fontSize="20" textColor="0xffffff"></Label>
    </View>
    <View flexCss="{flex-direction='column', flex=1, margin-top=5*Sys.scale, margin-bottom=5*Sys.scale, margin-left=15*Sys.scale, margin-right=15*Sys.scale}">
        <Label flexCss="{flex=1}" text="one line one line one line one line one line one line" fontSize="25" lineCount="1"></Label>
        <Label flexCss="{flex=1}" text="two lines two lines two lines two lines two lines two lines two lines two lines" fontSize="25" lineCount="2"></Label>
    </View>
    <View flexCss="{height=Sys.contH/10}" backgroundColor="0x004B97">
        <Label flexCss="{flex=1, margin=10*Sys.scale}" text="FontStyle" fontSize="20" textColor="0xffffff"></Label>
    </View>
    <View flexCss="{flex-direction='column', flex=1, margin-top=5*Sys.scale, margin-bottom=5*Sys.scale, margin-left=15*Sys.scale, margin-right=15*Sys.scale}">
        <Label id="fs1" flexCss="{flex=1}" text="normal" fontSize="25"></Label>
        <Label id="fs2" flexCss="{flex=1}" text="bold" fontSize="25"></Label>
        <Label id="fs3" flexCss="{flex=1}" text="italic" fontSize="25"></Label>
    </View>
    <View flexCss="{height=Sys.contH/10}" backgroundColor="0x004B97">
        <Label flexCss="{flex=1, margin=10*Sys.scale}" text="TextDecoration" fontSize="20" textColor="0xffffff"></Label>
    </View>
    <View flexCss="{flex-direction='column', flex=1, margin-top=5*Sys.scale, margin-bottom=5*Sys.scale, margin-left=15*Sys.scale, margin-right=15*Sys.scale}">
        <Label id="td1" flexCss="{flex=1}" text="strikethrough" fontSize="25"></Label>
        <Label id="td2" flexCss="{flex=1}" text="underline" fontSize="25"></Label>
    </View>
    <View flexCss="{height=Sys.contH/10}" backgroundColor="0x004B97">
        <Label flexCss="{flex=1, margin=10*Sys.scale}" text="TextAlign" fontSize="20" textColor="0xffffff"></Label>
    </View>
    <View flexCss="{flex-direction='column', flex=1, margin-top=5*Sys.scale, margin-bottom=5*Sys.scale, margin-left=15*Sys.scale, margin-right=15*Sys.scale}">
        <Label flexCss="{flex=1}" text="left" fontSize="25" textAlign="TextAlign.LEFT"></Label>
        <Label flexCss="{flex=1}" text="center" fontSize="25" textAlign="TextAlign.CENTER"></Label>
        <Label flexCss="{flex=1}" text="right" fontSize="25" textAlign="TextAlign.RIGHT"></Label>
    </View>
    <View flexCss="{height=Sys.contH/10}" backgroundColor="0x004B97">
        <Label flexCss="{flex=1, margin=10*Sys.scale}" text="TextOverflow" fontSize="20" textColor="0xffffff"></Label>
    </View>
    <View flexCss="{flex-direction='column', flex=1, margin-top=5*Sys.scale, margin-bottom=5*Sys.scale, margin-left=15*Sys.scale, margin-right=15*Sys.scale}">
        <Label flexCss="{flex=1}" text="no text-overflow" fontSize="25"></Label>
        <Label flexCss="{flex=1}" text="text-overflow:ellipsis,ellipsis,ellipsis,ellipsis" fontSize="25"></Label>
    </View>
</View>