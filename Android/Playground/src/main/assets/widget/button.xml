<View id="root" frame="0, 0, Sys.contW, Sys.contH/3" flexCss="{flex-direction='column'}" >
    <View flexCss="{flex-direction='row', flex=1}">
        <Button id="button1" flexCss="{flex=1, margin=5*Sys.scale}" title="Default" borderWidth="1" borderColor="0x000000"></Button>
        <Button id="button2" flexCss="{flex=1, margin=5*Sys.scale}" title="BG Color" backgroundColor="0xA066D3"></Button>
        <Button id="button3" flexCss="{flex=1, margin=5*Sys.scale}" title="Title Color" titleColor="0xFF7F50" borderWidth="1" borderColor="0x000000"></Button>
    </View>
    <View flexCss="{flex-direction='row', flex=1}">
        <Button id="button5" flexCss="{flex=1, margin=5*Sys.scale}" backgroundColor="0x228B22" titleColor="0xffffff" title="Corner" cornerRadius="10"></Button>
        <Button id="button6" flexCss="{flex=1, margin=5*Sys.scale}" backgroundColor="0xffffff" borderWidth="1" title="Border" borderColor="0x000000" cornerRadius="10"></Button>
    </View>
    <View flexCss="{flex-direction='row', flex=1}">
        <Button id="button4" flexCss="{flex=1, margin=5*Sys.scale}" backgroundColor="0xffffff" image="https://gw.alicdn.com/tfs/TB124hiQpXXXXceapXXXXXXXXXX-375-80.jpg, https://gw.alicdn.com/tfs/TB1DMdMQpXXXXbOXFXXXXXXXXXX-375-80.jpg"></Button>
    </View>
</View>