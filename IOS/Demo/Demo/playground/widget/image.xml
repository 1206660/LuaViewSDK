            <Image id="httpImg" flexCss="flex: 1" image="http://g.alicdn.com/ju/lua/2.0.25/doc/icon.png"></Image>
        </View>
        <View id="row3" flexCss="flex-direction: column, flex: 1, margin-bottom: 10">
