<v id="root" frame="10, 5, Sys.contW-20, Sys.contH/3-10" css="{flex-direction='row'}" bg="0xffffff" >
    <v id="left.pannel" css="{flex-direction='column', flex=2}">
        <img id="profile" css="{flex=1, margin=15}"></img>
    </v>
    <v id="right.pannel" css="{flex-direction='column', flex=3}">
        <l id="movieName" css="{flex=1, margin-top=15}" fontSize="18" textColor="0x000000"></l>
        <l id="score" css="{height=20}" textColor="0xe61414" fontSize="14"></l>
        <l id="character" css="{flex=2}" lineCount="3" textColor="0x666666" fontSize="16"></l>
        <l id="number" css="{flex=1, margin-bottom=10}" textColor="0xe61414" fontSize="14"></l>
    </v>
</v>